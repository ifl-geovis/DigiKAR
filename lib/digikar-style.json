{
  "id": "bm_web_bin",
  "version": 8,
  "name": "bm_web_bin",
  "metadata": {
    "digikar:style-version": "0.1.0"
  },
  "glyphs": "https://tiles.geohistoricaldata.org/tiles/font/{fontstack}/{range}",
  "transition": {
    "duration": 300,
    "delay": 0
  },
  "sprite": "https://tiles.geohistoricaldata.org/tiles/sdf_sprite/digikar",
  "sources": {
    "hillshadeS3": {
      "type": "raster-dem",
      "tiles": [
        "https://s3.amazonaws.com/elevation-tiles-prod/terrarium/{z}/{x}/{y}.png"
      ],
      "tileSize": 256,
      "attribution": "<a href='https://mapzen.com/tangram'>Tangram</a> | <a href='https://mapzen.com/'>Mapzen</a>"
    },
    "orteKursachsen": {
      "type": "vector",
      "url": "https://tiles.geohistoricaldata.org/tiles/orte",
      "attribution": "HOV"
    },
    "placesOfExecution": {
      "type": "vector",
      "url": "https://tiles.geohistoricaldata.org/tiles/richtstaetten",
      "attribution": "DigiKAR"
    },
    "orteMainz": {
      "type": "vector",
      "url": "https://tiles.geohistoricaldata.org/tiles/places_with_territory"
    },
    "significantPlaces": {
      "type": "vector",
      "url": "https://tiles.geohistoricaldata.org/tiles/cities"
    },
    "ocean": {
      "type": "vector",
      "url": "https://tiles.geohistoricaldata.org/tiles/ocean",
      "attribution": "<a href='https://www.naturalearthdata.com'>Natural Earth</a>"
    },
    "lakes": {
      "type": "vector",
      "url": "https://tiles.geohistoricaldata.org/tiles/lakes",
      "attribution": "<a href='https://www.naturalearthdata.com'>Natural Earth</a>"
    },
    "lakes_kursachsen": {
      "type": "vector",
      "url": "https://tiles.geohistoricaldata.org/tiles/lakes_kurssachsen",
      "attribution": "<a href='https://leibniz-ifl.de/'>IfL</a>"
    },
    "rivers_kursachsen": {
      "type": "vector",
      "url": "https://tiles.geohistoricaldata.org/tiles/rivers_kurssachsen",
      "attribution": "<a href='https://leibniz-ifl.de/'>IfL</a>"
    },
    "holy_roman_empire_borders": {
      "type": "vector",
      "url": "https://tiles.geohistoricaldata.org/tiles/holy_roman_empire_borders_1659"
    },
    "hillshadeBasemapDe": {
      "type": "raster",
      "attribution": "&copy; 2023 basemap.de / BKG | Datenquellen: Â© GeoBasis-DE",
      "minzoom": 0,
      "maxzoom": 22,
      "tiles": [
        "https://sgx.geodatenzentrum.de/wms_basemapde_schummerung?tiled=true&bbox={bbox-epsg-3857}&service=WMS&version=1.3.0&request=GetMap&layers=de_basemapde_web_raster_combshade&styles=&crs=EPSG:3857&width=256&height=256&format=image/png&transparent=true"
      ],
      "tileSize": 256
    }
  },
  "layers": [
    {
      "id": "hillshadeGlobal",
      "type": "hillshade",
      "source": "hillshadeS3",
      "source-layer": "hillshade",
      "maxzoom": 15,
      "paint": {
        "hillshade-shadow-color": "rgb(200,200,200)",
        "hillshade-accent-color": "rgb(220,220,220)",
        "hillshade-exaggeration": 0.2
      }
    },
    {
      "id": "hillshadeDe",
      "type": "raster",
      "source": "hillshadeBasemapDe",
      "minzoom": 15,
      "maxzoom": 22,
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "raster-brightness-max": 1,
        "raster-contrast": {
          "stops": [
            [0, 0.2],
            [6, 0]
          ]
        },
        "raster-opacity": 0.1
      }
    },
    {
      "id": "ocean",
      "type": "fill",
      "source": "ocean",
      "source-layer": "ocean",
      "paint": {
        "fill-color": "rgb(90,130,160)",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "lakes",
      "type": "fill",
      "source": "lakes",
      "source-layer": "lakes",
      "paint": {
        "fill-color": "rgb(90,130,160)",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "rivers_kursachsen",
      "type": "line",
      "source": "rivers_kursachsen",
      "source-layer": "rivers_kurssachsen",
      "paint": {
        "line-color": "rgb(90,130,160)",
        "line-opacity": 0.6
      }
    },
    {
      "id": "lakes_kursachsen",
      "type": "fill",
      "source": "lakes_kursachsen",
      "source-layer": "lakes_kurssachsen",
      "paint": {
        "fill-color": "rgb(90,130,160)",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "holy_roman_empire_borders",
      "type": "line",
      "source": "holy_roman_empire_borders",
      "source-layer": "holy_roman_empire_borders_1659",
      "paint": {
        "line-color": "rgb(0,0,0)",
        "line-width": 1,
        "line-opacity": 0.2
      }
    },
    {
      "id": "significantPlaces",
      "type": "circle",
      "source": "significantPlaces",
      "source-layer": "cities",
      "minzoom": 3,
      "paint": {
        "circle-radius": 3,
        "circle-opacity": 0.5,
        "circle-color": "rgb(0,0,0)"
      }
    },
    {
      "id": "significantPlacesLabels",
      "type": "symbol",
      "source": "significantPlaces",
      "source-layer": "cities",
      "minzoom": 3,
      "maxzoom": 0,
      "layout": {
        "text-field": "{name}",
        "text-font": ["Inter Bold"],
        "text-size": 14,
        "text-anchor": "bottom-left",
        "text-offset": [0.1, -0.1]
      }
    },
    {
      "id": "orteMainz",
      "type": "circle",
      "source": "orteMainz",
      "source-layer": "places_with_territory",
      "minzoom": 8,
      "paint": {
        "circle-stroke-width": 1,
        "circle-stroke-color": "rgb(0,0,0)",
        "circle-radius": 1,
        "circle-color": "rgb(255,255,255)"
      }
    },
    {
      "id": "orteKursachsen",
      "type": "circle",
      "source": "orteKursachsen",
      "source-layer": "orte",
      "minzoom": 8,
      "filter": ["==", ["get", "in_sample_regions"], true],
      "paint": {
        "circle-stroke-width": 1,
        "circle-stroke-color": "rgb(0,0,0)",
        "circle-radius": 1,
        "circle-color": "rgb(255,255,255)"
      }
    },
    {
      "id": "orteKursachsenLabels",
      "type": "symbol",
      "source": "orteKursachsen",
      "source-layer": "orte",
      "filter": ["==", ["get", "in_sample_regions"], true],
      "minzoom": 11,
      "maxzoom": 0,
      "layout": {
        "text-field": "{label}",
        "text-font": ["Inter Regular"],
        "text-size": 12,
        "text-anchor": "bottom-left",
        "text-offset": [0.5, -0.5]
      },
      "paint": {
        "text-color": "rgb(100,100,100)",
        "text-halo-color": "rgb(255,255,255)",
        "text-halo-width": 2,
        "text-halo-blur": 5
      }
    },
    {
      "id": "orteMainzLabels",
      "type": "symbol",
      "source": "orteMainz",
      "source-layer": "places_with_territory",
      "minzoom": 11,
      "maxzoom": 0,
      "layout": {
        "text-field": "{place_name}",
        "text-font": ["Inter Regular"],
        "text-size": 12,
        "text-anchor": "bottom-left",
        "text-offset": [0.5, -0.5]
      },
      "paint": {
        "text-color": "rgb(100,100,100)",
        "text-halo-color": "rgb(255,255,255)",
        "text-halo-width": 2,
        "text-halo-blur": 5
      }
    },
    {
      "id": "gallow",
      "type": "symbol",
      "source": "placesOfExecution",
      "source-layer": "richtstaetten",
      "layout": {
        "icon-image": "gallow",
        "icon-allow-overlap": true
      },
      "paint": {
        "icon-color": "rgb(100,60,0)",
        "icon-halo-color": "rgb(255,255,255)",
        "icon-halo-width": 5
      }
    },
    {
      "id": "gallow_label",
      "type": "symbol",
      "source": "placesOfExecution",
      "source-layer": "richtstaetten",
      "layout": {
        "text-field": "{ort}",
        "text-font": ["Inter Bold Italic"],
        "text-size": 12,
        "text-anchor": "bottom-left",
        "text-offset": [0, 1]
      },
      "minzoom": 8,
      "paint": {
        "text-color": "rgb(100,100,100)",
        "icon-halo-color": "rgb(255,255,255)",
        "icon-halo-width": 2,
        "text-halo-blur": 5
      }
    }
  ]
}
